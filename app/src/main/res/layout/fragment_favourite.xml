<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouriteFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:textSize="50dp"
        android:lineHeight="50dp"
        android:id="@+id/noneFavouriteProduct"
        android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/emptyLikedProducts"/>

    <view class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </view>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/favouriteFragmentRecyclerView"
        android:layout_height="match_parent"

        android:layout_marginBottom="40dp"/>

    <!--    <ListView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/favouriteProductListContainer"/>-->

</FrameLayout>